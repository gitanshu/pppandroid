package com.ppp.ppp;

import com.afollestad.cardsui.Card;
import com.afollestad.cardsui.CardAdapter;
import com.afollestad.cardsui.CardHeader;
import com.afollestad.cardsui.CardListView;

import android.app.Activity;
import android.os.Bundle;
import android.util.Log;
import android.view.Menu;

public class PhotoroomActivity extends Activity {

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_photoroom);
		Log.d("username",MainActivity.username);
		CardListView cardList = (CardListView)findViewById(R.id.list);
		CardAdapter<Card> adapter = new CardAdapter<Card>(this).setAccentColorRes(android.R.color.holo_blue_dark);
		adapter.add(new CardHeader("Header 1"));
		adapter.add(new Card("One", "Example 1"));
		adapter.add(new Card("Two", "Example 2"));
		adapter.add(new Card("Three", "Example 3"));

		cardList.setAdapter(adapter);

	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.photoroom, menu);
		return true;
	}

}
